<div class="container-fluid text-center">

    <form action="/CrearPrenda" method="POST">

        {{#if materialInconsistente}}
            <div class="form-group alert alert-danger" role="alert">
                El material elegido no es compatible con el tipo de prenda
            </div>
        {{/if}}

        <div class="form-row">
            <div class="input-group input-group-lg col-md-4 mx-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">Nombre</span>
                </div>
                <input type="text" name="nombrePrenda" class="form-control" placeholder="Ej: Remera nueva"
                       aria-describedby="basic-addon1">
            </div>
        </div>
        <br>

        <div class="container-fluid">

            <label>Tipo:</label>
            <select name="tipoPrenda">
                {{#each Tipos }}
                    <option>{{this}}</option>
                {{/each}}
            </select>
            <br>

            <label>Material:</label>
            <select name="materialPrenda">
                {{#each Materiales }}
                    <option>{{this}}</option>
                {{/each}}
            </select>
            <br>

            <label>Trama:</label>
            <select name="tramaPrenda">
                {{#each Tramas }}
                    <option>{{this}}</option>
                {{/each}}
            </select>
            <br>

        </div>

        <div class="card-body d-flex">

            <a href="perfil"  class="btn btn-primary" >Volver a Perfil
            </a>

            <button type="submit" value="Siguiente paso" name="botoncito" class="btn btn-primary ml-auto">Siguiente
                paso
            </button>
        </div>
        <!--<input type="submit" value="Siguiente paso">-->
    </form>

</div>
