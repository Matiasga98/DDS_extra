<h2>Color primario:</h2>
<div class="picker1">
    Red <input type="range" min="0" max="255" step="1" id="redColorPrimario" value="115" name="rojo1">
    Green <input type="range" min="0" max="255" step="1" id="greenColorPrimario" value="10" name="azul1">
    Blue <input type="range" min="0" max="255" step="1" id="blueColorPrimario" value="162" name="verde1">
    <div id="display1"></div>
</div>
<script type="text/javascript">
	var input = document.querySelectorAll("input");
		for(var i = 0; i < input.length; i++){
		input[i].addEventListener("input", function(){
			var red = document.getElementById("redColorPrimario").value,
			    green = document.getElementById("greenColorPrimario").value,
			    blue = document.getElementById("blueColorPrimario").value;
				var display = document.getElementById("display1");
			display.style.background = "rgb(" + red + ", " + green + ", " + blue + ")";
		});
	}
</script>

